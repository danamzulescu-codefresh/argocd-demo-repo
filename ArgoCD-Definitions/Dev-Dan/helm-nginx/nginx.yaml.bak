apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: nginx
  labels:
    app: nginx
spec:
 project: dan-a-eks
 source:
   repoURL: https://github.com/danamzulescu-codefresh/k8s-apps/
   path: dev/helm-nginx/
   helm:
     parameters:
       - name: service.type
         value: ClusterIP
     valueFiles:
        - values.yaml    
 destination:
   namespace: nginx-app
   name: in-cluster
 syncPolicy:
   automated: {}
   syncOptions:
     - CreateNamespace=true
